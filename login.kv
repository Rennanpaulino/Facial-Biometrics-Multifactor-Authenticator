<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [40, 60]
        spacing: 20
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)  # Fundo branco
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: 'imagens/gov.png'
            size_hint: (1, 1)
            allow_stretch: True
            keep_ratio: True
            size: self.texture_size


        BoxLayout:
            orientation: 'vertical'
            size_hint: (None, None)
            width: 300
            height: 300
            spacing: 25  # Aumenta o espaçamento para evitar sobreposição
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}  # Levemente abaixo do centro

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'CPF'
                    font_size: '16sp'
                    halign: 'left'
                    valign: 'middle'
                    size_hint_y: None
                    height: self.texture_size[1]

                TextInput:
                    id: cpf_input
                    hint_text: 'Digite seu CPF'
                    multiline: False
                    size_hint_y: None
                    height: 40
                    font_size: '16sp'
                    max_length: 30
                    padding: [10, 10]
                    background_normal: ''
                    background_color: (0.9, 0.9, 0.9, 1)
                    foreground_color: (0, 0, 0, 1)

            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Senha'
                    font_size: '16sp'
                    halign: 'left'
                    valign: 'middle'
                    size_hint_y: None
                    height: self.texture_size[1]

                TextInput:
                    id: password_input
                    hint_text: 'Digite sua senha'
                    password: True
                    multiline: False
                    size_hint_y: None
                    height: 40
                    font_size: '16sp'
                    max_length: 20
                    padding: [10, 10]
                    background_normal: ''
                    background_color: (0.9, 0.9, 0.9, 1)
                    foreground_color: (0, 0, 0, 1)

            Button:
                text: 'Sign In'
                size_hint_y: None
                height: 50
                pos_hint: {'center_x': 0.5}
                on_press: root.verify_credentials(self)
            
            Button:
                text: 'Cadastre-se'
                size_hint_y: None
                height: 50
                pos_hint: {'center_x': 0.5}
                on_press: root.cadastro(self)         



                
                

           
