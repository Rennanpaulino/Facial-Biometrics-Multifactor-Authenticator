<<CadastroScreen>:
    BoxLayout:
        orientation: 'horizontal'
        padding: [40, 60]
        spacing: 20
        background_color: (1, 1, 1, 1)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            spacing: 20

            Label:
                text: 'Cadastro'
                font_size: '32sp'
                bold: True
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'

            BoxLayout:
                orientation: 'vertical'
                size_hint: (None, None)
                width: 300
                height: 300
                spacing: 15

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Nome'
                        font_size: '16sp'
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: self.texture_size[1]

                    TextInput:
                        id: name_input
                        hint_text: 'Digite seu nome completo'
                        multiline: False
                        size_hint_y: None
                        height: 40
                        font_size: '16sp'
                        max_length: 30
                        padding: [10, 10]
                        background_normal: ''
                        background_color: (0.9, 0.9, 0.9, 1)
                        foreground_color: (0, 0, 0, 1)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'CPF'
                        font_size: '16sp'
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: self.texture_size[1]

                    TextInput:
                        id: cpf_input
                        hint_text: 'Digite seu CPF sem dígitos'
                        multiline: False
                        size_hint_y: None
                        height: 40
                        font_size: '16sp'
                        max_length: 20
                        padding: [10, 10]
                        background_normal: ''
                        background_color: (0.9, 0.9, 0.9, 1)
                        foreground_color: (0, 0, 0, 1)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'E-Mail'
                        font_size: '16sp'
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: self.texture_size[1]

                    TextInput:
                        id: email_input
                        hint_text: 'Digite seu e-mail'
                        multiline: False
                        size_hint_y: None
                        height: 40
                        font_size: '16sp'
                        max_length: 20
                        padding: [10, 10]
                        background_normal: ''
                        background_color: (0.9, 0.9, 0.9, 1)
                        foreground_color: (0, 0, 0, 1)

                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'Senha'
                        font_size: '16sp'
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: self.texture_size[1]

                    TextInput:
                        id: password_input
                        hint_text: 'Digite sua senha'
                        password: True
                        multiline: False
                        size_hint_y: None
                        height: 40
                        font_size: '16sp'
                        max_length: 20
                        padding: [10, 10]
                        background_normal: ''
                        background_color: (0.9, 0.9, 0.9, 1)
                        foreground_color: (0, 0, 0, 1)

                    Label:
                        text: 'Obs: A senha deve conter:\\n8 caracteres\\n1 letra maiúscula\\n1 minúscula\\nSímbolos: @_-#&\\nNúmeros.'
                        font_size: '8sp'
                        color: (1, 0, 0, 1)
                        halign: 'center'
                        valign: 'middle'
                        size_hint_y: None
                        height: self.texture_size[1]

            Widget:
                size_hint_y: 1

            Button:
                text: 'Cadastrar'
                size_hint: (None, None)
                size: (150, 50)
                pos_hint: {'center_x': 0.5}
                on_press: root.cadastrar(self)

        Image:
            source: 'arvore.png'
            size_hint: (0.5, 1)
            allow_stretch: True
            keep_ratio: True

           

